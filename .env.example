# Ejemplo de variables de entorno para Railway
# Copia este archivo como .env y completa los valores reales

# Puerto de la app (Railway usa PORT automáticamente)
PORT=3000

# Base de datos
DB_HOST=
DB_PORT=
DB_USERNAME=
DB_PASSWORD=
DB_DATABASE=

# JWT
JWT_SECRET=
JWT_EXPIRES_IN=3600s

# Email
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=

# Google Maps API
GOOGLE_MAPS_API_KEY=

# Otros (ajusta según tu config)
CLIENT_REQUEST_IMG_BASE=img_carga
CLIENT_REQUEST_IMG_PUBLIC_PATH=/img_carga
PAYMENTS_UPLOAD_BASE=pagos
PAYMENTS_PUBLIC_PATH=/pagos
